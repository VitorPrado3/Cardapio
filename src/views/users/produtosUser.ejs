<%- include ('../partials/header.ejs') %>
<%- include ('../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Produtos</h2>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Descrição</th>
                <th>Categoria</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product =>{ %>
                <tr>
                    <th><%= product.idProduct %></th>
                    <th><%= product.name %></th>
                    <th><%= product.price %></th>
                    <th><%= product.description %></th>
                    
                </tr>
                
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ('../partials/footer.ejs') %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm('Deseja deletar o produto?');
        if (decision){
            form.submit();
        }
    }
</script>